<% if flash[:messages] %>
<ul>
    <h3><font color="red">There were following errors:</font></h3>
    <% flash[:messages].each do |msg| %>
        <font color="red"><li><%= msg %></li></font>
    <% end %>
    </ul>
<% end %>

<%= form_for @employee do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br><br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br><br>
    <%= f.label :alias %>
    <%= f.text_field :alias %><br><br>
    <%= f.label :title %>
    <%= f.text_field :title %><br><br>
    <%= f.label :office %>
    <%= f.text_field :office %><br><br>
    <%= f.label :img_url %>
    <%= f.text_field :img_url %><br><br>
    <%= f.label "Belongs To" %>
    <%= f.collection_select :dog_id, Dog.all, :id, :name %><br><br>
    <%= f.submit %>
<% end %>